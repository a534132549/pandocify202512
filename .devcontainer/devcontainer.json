{
    "name": "Pandocify Dev Env",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {}
    },
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y pandoc && pip install -r backend/requirements.txt && npm install",
    "forwardPorts": [
        3010,
        4000
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "ms-python.python"
            ]
        }
    }
}